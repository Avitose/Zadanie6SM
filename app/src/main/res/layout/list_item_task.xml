<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/list_item_layout_margin"
    android:orientation="vertical" android:background="@drawable/item_list_rectangle">
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnCount="2">

        <ImageView
            android:id="@+id/image_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:padding="@dimen/task_item_padding"
            tools:srcCompat="@drawable/ic_check_box_blank" />
        <LinearLayout android:layout_column="1" android:layout_width="match_parent" android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/task_item_name"
                android:layout_width="287dp"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/task_item_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </GridLayout>


</LinearLayout>